{{#if _mine}}
	<div class="row my-talk-header">
		<div class="span10">
			<h3>Talks submitted by: {{firstName}} {{lastName}}, {{title}}</h3>
		</div>
		<div class="span2">
			<button class="btn btn-primary pull-right talk-all">ALL TALKS</button>
		</div>
	</div>
{{/if}}

<div class="row">
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th class="talk-header" data-key="title">TITLE</th>
				<th class="talk-header" data-key="description">DESCRIPTION</th>
				<th class="talk-header" data-key="createdBy">CREATED BY</th>
				<th class="talk-header" data-key="createdDate">CREATED DATE</th>
				<th class="talk-header" data-key="votes">VOTES</th>
				{{#if _mine}}
					<th>ACTIONS</th>
				{{/if}}
			</tr>
		</thead>
		<tbody></tbody>
	</table>
</div>